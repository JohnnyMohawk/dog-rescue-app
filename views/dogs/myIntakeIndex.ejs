<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/dogs/index.css" />
<%- include('../partials/nav') %>

<main>
    <h1 class="head-title"><%= title %></h1>
    <div>
        <% dogs.forEach((dog) => { %>
            <% if (dog.intakeRep.equals(user?.profile._id)) { %>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title"><%= dog.name %>'s General Info:</h5>
                        <p class="card-text">
                            Age: <strong><%= dog.age %></strong><br>
                            Breed: <strong><%= dog.breed %></strong><br>
                            Weight: <strong><%= dog.weight %></strong><br>
                            <% if(dog.adoptable === true){ %>
                                <strong><%= dog.name %> is ready for adoption!</strong>
                            <% }else{ %>
                                <strong><%= dog.name %> is not ready for adoption.</strong>
                            <% } %> 
                        </p>
                        <a href="/dogs/<%= dog._id %>" class="card-link"><button class="btn btn-primary mb-2">DETAILS</button></a>
                </div>
            </div>
            <% } %> 
        <% }) %> 
    </div>
</main>

<%- include('../partials/footer') %>