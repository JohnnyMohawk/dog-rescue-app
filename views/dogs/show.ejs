<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/dogs/show.css" />
<%- include('../partials/nav') %>
<main>
    <h1><%= title %> </h1>
    <section>
        <div>Name:</div>
        <div><%= `${dog.name}` %> </div>
        <div>Age:</div>
        <div><%= `${dog.age}` %> </div>
        <div>Breed:</div>
        <div><%= `${dog.breed}` %> </div>
        <div>Weight:</div>
        <div><%= `${dog.weight}` %> </div>
        <div>Ideal Weight:</div>
        <div><%= `${dog.idealWeight}` %> </div>
        <div>Coat:</div>
        <div><%= `${dog.coat}` %> </div>
        <div>Fixed:</div>
        <div><%= `${dog.fixed}` %> </div>
        <div>Health:</div>
        <div><%= `${dog.health}` %> </div>
    </section>
    <% if(dog.vaccination.length) { %>
        <% dog.vaccination.forEach(vaccs => { %> 
            <div>Parvo Vaccs Rec:</div>
            <div><%= `${vaccs.parvoRec.toUTCString().split(' ').slice(0, 4).join(' ')}` %> </div>
            <div>Next Dose Due:</div>
            <div><%= `${vaccs.parvoDueNext.toUTCString().split(' ').slice(0, 4).join(' ')}` %> </div>
            <div>Distemper Vaccs Rec:</div>
            <div><%= `${vaccs.distRec.toUTCString().split(' ').slice(0, 4).join(' ')}` %> </div>
            <div>Next Dose Due:</div>
            <div><%= `${vaccs.distDueNext.toUTCString().split(' ').slice(0, 4).join(' ')}` %> </div>
            <div>Hepatitis Vaccs Rec:</div>
            <div><%= `${vaccs.hepRec.toUTCString().split(' ').slice(0, 4).join(' ')}` %> </div>
            <div>Next Dose Due:</div>
            <div><%= `${vaccs.hepDueNext.toUTCString().split(' ').slice(0, 4).join(' ')}` %> </div>
            <div>Rabies Vaccs Rec:</div>
            <div><%= `${vaccs.rabiesRec.toUTCString().split(' ').slice(0, 4).join(' ')}` %> </div>
            <div>Next Dose Due:</div>
            <div><%= `${vaccs.rabiesDueNext.toUTCString().split(' ').slice(0, 4).join(' ')}` %> </div>
        <% }) %> 
        <% } else { %>
        <a href="/dogs/vaccines/<%= dog._id %>">Vaccine Form</a>
        <% } %>
    <% if(dog.behavior.length) { %>
        <% dog.behavior.forEach(test => { %>
            <div>Friendly with Humans:</div>
            <div><%= `${test.humans}` %> </div>
            <div>Friendly with Children:</div>
            <div><%= `${test.kids}` %> </div>
            <div>Likes Other Dogs:</div>
            <div><%= `${test.otherDogs}` %> </div>
            <div>Likes Cats:</div>
            <div><%= `${test.cats}` %> </div>
            <div>House Trained:</div>
            <div><%= `${test.houseBroken}` %> </div>
            <div>Energy Level 1 - 5:</div>
            <div><%= `${test.energy}` %> </div>
    <!-- <a href="/dogs/vaccines/<%= dog._id %>">Vaccine Form</a> -->
    <% }) %> 
    <% } else { %>
    <a href="/dogs/behavior/<%= dog._id %>">Behavior Form</a>
    <% } %>
</main>

<%- include('../partials/footer') %>